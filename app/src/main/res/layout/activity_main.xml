<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="lxkj.train.com.entity.base.BaseEntity" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                android:background="@drawable/main_left_shape"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="1dp"
                    android:paddingLeft="1dp"
                    android:background="@drawable/main_left_shape"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/headPic"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:scaleType="center"
                        android:src="@mipmap/headpic" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/train"
                        android:scaleType="centerCrop"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/layout_info"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="姓名:"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_1"
                                android:text="杜飞龙"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:id="@+id/tv_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_1"
                                android:layout_marginLeft="10dp"
                                android:text="工号:"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_1"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_2"
                                android:text="123456"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:id="@+id/tv_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_2"
                                android:layout_marginLeft="10dp"
                                android:text="段名:"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_2"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_3"
                                android:text="郑州机务段"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:id="@+id/tv_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_3"
                                android:layout_marginLeft="10dp"
                                android:text="部门:"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_3"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_4"
                                android:text="安全技术员"
                                android:textColor="@color/gray_7d7d7d"
                                android:textSize="@dimen/text_size14" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/train"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="centerCrop"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/layout_info"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/tv_left_bottom1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="星期一"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/gray_303030"
                            android:textSize="13dp"
                            />
                        <TextView
                            android:id="@+id/tv_left_bottom2"
                            android:layout_below="@+id/tv_left_bottom1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:29"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="#00b0d8"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:id="@+id/tv_left_bottom3"
                            android:layout_below="@+id/tv_left_bottom2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-08-13"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/gray_4d4d4d"
                            android:textSize="13dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@color/gray_f5"
                android:gravity="center"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor = "@color/white"
                    app:cardCornerRadius="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    >
                <lxkj.train.com.view.MarqueeText
                    android:id="@+id/marqueeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="4dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="机车乘务员行车指导仪，机车乘务员行车指导仪，机车乘务员行车指导仪，机车乘务员行车指导仪，机车乘务员行车指导仪，机车乘务员行车指导仪，机车乘务员行车指导仪，机车乘务员行车指导仪，机车乘务员行车指导仪"
                    android:textColor="@color/gray_009944"
                    android:textSize="16dp"
                    android:textStyle="italic|bold" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_left_drawer_layout"
            android:layout_width="700dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            android:clickable="true"
            android:onClick="onClick">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/drawer_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="系统容量"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <RelativeLayout
                            android:id="@+id/drawer_layout_ui"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/drawer_tv1">

                            <View
                                android:id="@+id/drawer_v1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@color/gray_99"
                                android:orientation="horizontal" />

                            <View
                                android:id="@+id/drawer_v2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@color/base_txt_color3"
                                android:orientation="horizontal" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/drawer_tv_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drawer_layout_ui"
                            android:layout_marginLeft="50dp"
                            android:layout_toRightOf="@+id/drawer_tv1"
                            android:textColor="@color/gray_33"
                            android:textSize="12dp" />

                        <View
                            android:id="@+id/drawer_line1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/linear0.5"
                            android:layout_below="@+id/drawer_tv_size"
                            android:layout_marginTop="5dp"
                            android:background="@color/gray_dd" />

                        <LinearLayout
                            android:id="@+id/drawer_taping_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/drawer_line1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/drawer_tv_taping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/set_back_shape"
                                android:padding="5dp"
                                android:text="录音"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/drawer_tv_photograph"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/set_back_shape"
                                android:padding="5dp"
                                android:text="拍照"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/drawer_tv_video"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/set_back_shape"
                                android:padding="5dp"
                                android:text="视频"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/drawer_tv_hearTaping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/set_back_shape"
                                android:padding="5dp"
                                android:text="查看录音"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/drawer_tv_lo_photograph"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/set_back_shape"
                                android:padding="5dp"
                                android:text="查看照片"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/drawer_tv_lo_video"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/set_back_shape"
                                android:padding="5dp"
                                android:text="查看录像"
                                android:textColor="@color/white"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/linear0.5"
                            android:layout_below="@+id/drawer_taping_layout"
                            android:background="@color/gray_dd" />

                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drawer_taping_layout"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/drawer_tv_trainNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"
                                android:background="@drawable/set_back_shape"
                                android:gravity="left|center_vertical"
                                android:padding="5dp"
                                android:text="查看车次"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/drawer_tv_remind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/spinner"
                                android:background="@drawable/set_back_shape"
                                android:gravity="left|center_vertical"
                                android:padding="5dp"
                                android:text="叫班提醒设置"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/linear0.5"
                            android:layout_below="@+id/relativeLayout"
                            android:background="@color/gray_dd" />

                        <TextView
                            android:id="@+id/drawer_data_sync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relativeLayout"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/set_back_shape"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="数据同步"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/drawer_data_sync_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/relativeLayout"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/drawer_data_sync"
                            android:gravity="center_vertical"
                            android:text="最后同步时间：2018-06-27  08:52:49"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_data_sync" />

                        <TextView
                            android:id="@+id/drawer_tv_setService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drawer_data_sync"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/set_back_shape"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="服务器设置"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_tv_setService" />

                        <TextView
                            android:id="@+id/drawer_tv_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drawer_tv_setService"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="设置"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <Switch
                            android:id="@+id/drawer_setSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_setService"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@+id/drawer_tv_set"
                            android:checked="false"
                            android:switchMinWidth="60dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_setService"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/drawer_setSwitch"
                            android:gravity="center_vertical"
                            android:text="当前版本:v1.0.0_20180627"
                            android:textSize="15dp" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_tv_set" />

                        <TextView
                            android:id="@+id/drawer_tv_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_set"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="WiFi"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <Switch
                            android:id="@+id/drawer_wifiSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_set"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/drawer_tv_wifi"
                            android:checked="false"
                            android:switchMinWidth="60dp" />

                        <TextView
                            android:id="@+id/drawer_tv_4G"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_set"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/drawer_wifiSwitch"
                            android:gravity="center_vertical"
                            android:text="网络类型："
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/drawer_text_4G"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_setSwitch"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/drawer_tv_4G"
                            android:gravity="center_vertical"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_tv_wifi" />

                        <TextView
                            android:id="@+id/drawer_tv_brightness"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_wifiSwitch"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="亮度调节"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <SeekBar
                            android:id="@+id/drawer_seekBar"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_wifiSwitch"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/drawer_tv_brightness"
                            android:focusableInTouchMode="true"
                            android:progress="50" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_tv_brightness" />

                        <TextView
                            android:id="@+id/drawer_tv_night"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_brightness"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="夜间模式"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <Switch
                            android:id="@+id/drawer_nightSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_brightness"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/drawer_tv_night"
                            android:checked="false"
                            android:switchMinWidth="60dp" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_tv_night" />

                        <TextView
                            android:id="@+id/drawer_tv_navigation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drawer_tv_night"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/set_back_shape"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="模拟导航"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_tv_navigation" />

                        <TextView
                            android:id="@+id/drawer_tv_gesture"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_navigation"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="手势密码"
                            android:textColor="@color/gray_33"
                            android:textSize="15dp" />

                        <Switch
                            android:id="@+id/drawer_gestureSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/drawer_tv_navigation"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/drawer_tv_gesture"
                            android:checked="false"
                            android:switchMinWidth="60dp" />

                        <View
                            style="@style/transverseLine"
                            android:layout_below="@+id/drawer_tv_gesture" />
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>

</layout>
