<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="lxkj.train.com.entity.base.BaseEntity" />
    </data>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/holo_blue_dark"
        tools:context="lxkj.train.com.mvp.view.activity.ShowFileActivity">
        <android.support.design.widget.TabLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/tab_layout"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/binearone"
            app:tabIndicatorHeight="4dp"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/tabIndicatorColor"
            app:tabSelectedTextColor="@color/tabIndicatorColor"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            app:tabTextColor="@color/gray_33" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_1"
            android:layout_margin="7dp"
            android:padding="5dp"
            android:background="@drawable/binearone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
